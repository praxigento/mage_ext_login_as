<config>
    <modules>
        <Praxigento_LoginAs>
            <version>1.2.0</version>
        </Praxigento_LoginAs>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Praxigento_LoginAs before="Mage_Adminhtml">Praxigento_LoginAs</Praxigento_LoginAs>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <sales>
                            <children>
                                <order>
                                    <children>
                                        <prxgt_lgas_created_by_access translate="title" module="prxgt_lgas_helper">
                                            <title>Praxigento: 'Created by' access</title>
                                            <sort_order>1024</sort_order>
                                        </prxgt_lgas_created_by_access>
                                    </children>
                                </order>
                            </children>
                        </sales>
                        <customer>
                            <children>
                                <!-- add entry under Customer section -->
                                <prxgt_lgas_access translate="title" module="prxgt_lgas_helper">
                                    <title>Praxigento: 'Login as Customer' access</title>
                                    <sort_order>1024</sort_order>
                                </prxgt_lgas_access>
                            </children>
                        </customer>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <!-- Section on the "System/Configuration" panel -->
                                        <!-- place ACL to config sections here -->
                                        <prxgt_lgas translate="title" module="prxgt_lgas_helper">
                                            <title>Praxigento: Login As Customer Section</title>
                                            <sort_order>600</sort_order>
                                        </prxgt_lgas>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <events>
            <adminhtml_block_html_before>
                <observers>
                    <prxgt_lgas_observer>
                        <type>singleton</type>
                        <class>prxgt_lgas_model/observer</class>
                        <method>onAdminhtmlBlockHtmlBefore</method>
                    </prxgt_lgas_observer>
                </observers>
            </adminhtml_block_html_before>
            <adminhtml_widget_container_html_before>
                <observers>
                    <prxgt_lgas_observer>
                        <type>singleton</type>
                        <class>prxgt_lgas_model/observer</class>
                        <method>onAdminhtmlWidgetContainerHtmlBefore</method>
                    </prxgt_lgas_observer>
                </observers>
            </adminhtml_widget_container_html_before>
        </events>
        <layout>
            <updates>
                <prxgt_lgas_layout_admin>
                    <file>prxgt/lgas/adminhtml_layout.xml</file>
                </prxgt_lgas_layout_admin>
            </updates>
        </layout>
        <translate>
            <modules>
                <prxgt_lgas>
                    <files>
                        <default>prxgt/lgas/prxgt_lgas.csv</default>
                    </files>
                </prxgt_lgas>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <prxgt_lgas_router>
                <use>standard</use>
                <args>
                    <module>Praxigento_LoginAs</module>
                    <frontName>prxgt_lgas_front</frontName>
                </args>
            </prxgt_lgas_router>
        </routers>
        <layout>
            <updates>
                <prxgt_lgas_layout_front>
                    <file>prxgt/lgas/frontend_layout.xml</file>
                </prxgt_lgas_layout_front>
            </updates>
        </layout>
    </frontend>
    <global>
        <events>
            <sales_convert_quote_address_to_order>
                <observers>
                    <prxgt_lgas_observer>
                        <type>singleton</type>
                        <class>prxgt_lgas_model/observer</class>
                        <method>onSalesConvertQuoteAddressToOrder</method>
                    </prxgt_lgas_observer>
                </observers>
            </sales_convert_quote_address_to_order>
        </events>
        <helpers>
            <!-- Default helper for module (prevents errors like "Class 'Namespace_Module_Helper_Data' not found in") -->
            <prxgt_lgas_helper>
                <class>Praxigento_LoginAs_Helper</class>
            </prxgt_lgas_helper>
        </helpers>
        <models>
            <prxgt_lgas_model>
                <class>Praxigento_LoginAs_Model</class>
            </prxgt_lgas_model>
        </models>
        <resources>
            <prxgt_lgas_setup>
                <setup>
                    <module>Praxigento_LoginAs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </prxgt_lgas_setup>
        </resources>
    </global>
</config>